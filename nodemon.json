{
  "watch": [
    "*.js",
    "*.html",
    "*.css",
    "*.json"
  ],
  "ignore": [
    "node_modules/",
    "*.log",
    ".git/",
    "package-lock.json"
  ],
  "ext": "js,html,css,json",
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false,
  "verbose": false
}