{
  "name": "the-commons",
  "version": "2.0.0",
  "type": "commonjs",
  "description": "A city-building game exploring land value economics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "echo 'No build step required'",

    "dev": "nodemon server.js --delay 1000ms",
    "dev:debug": "NODE_ENV=development DEBUG=true nodemon server.js --delay 1000ms",
    "dev:solo": "NODE_ENV=development GAME_MODE=solo nodemon server.js --delay 1000ms",
    "dev:multi": "NODE_ENV=development GAME_MODE=multiplayer nodemon server.js --delay 1000ms",

    "test": "npm run cleanup && npm run dev:debug",
    "test:solo": "npm run cleanup && npm run dev:solo",
    "test:multi": "npm run cleanup && npm run dev:multi",

    "cleanup": "pkill -f 'node.*server.js' || true",
    "reset": "npm run cleanup && sleep 2 && npm run dev",
    "status": "ps aux | grep 'node.*server.js' | grep -v grep || echo 'No server processes running'"
  },
  "keywords": [
    "game",
    "city-building",
    "economics",
    "land-value-tax",
    "multiplayer",
    "websocket",
    "railway"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "uuid": "^13.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
