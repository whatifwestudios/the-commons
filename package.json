{
  "name": "the-commons",
  "version": "2.0.0",
  "type": "commonjs",
  "description": "A city-building game exploring land value economics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "echo 'No build step required'",

    "dev": "nodemon server.js --delay 1000ms",
    "dev:debug": "NODE_ENV=development DEBUG=true nodemon server.js --delay 1000ms",
    "dev:solo": "NODE_ENV=development GAME_MODE=solo nodemon server.js --delay 1000ms",
    "dev:multi": "NODE_ENV=development GAME_MODE=multiplayer nodemon server.js --delay 1000ms",

    "test": "npm run cleanup && npm run dev:debug",
    "test:solo": "npm run cleanup && npm run dev:solo",
    "test:multi": "npm run cleanup && npm run dev:multi",

    "cleanup": "pkill -f 'node.*server.js' || true",
    "reset": "npm run cleanup && sleep 2 && npm run dev",
    "status": "ps aux | grep 'node.*server.js' | grep -v grep || echo 'No server processes running'",

    "lint": "node master-linter.js",
    "lint:all": "node master-linter.js all --verbose",
    "lint:multiplayer": "node master-linter.js multiplayer",
    "lint:v2": "node lint-multiplayer-v2.js",
    "lint:performance": "node master-linter.js performance",
    "lint:security": "node master-linter.js security",
    "lint:quality": "node master-linter.js quality",
    "lint:fix": "node master-linter.js --fix",
    "lint:report": "node master-linter.js --format=html all"
  },
  "keywords": [
    "game",
    "city-building",
    "economics",
    "land-value-tax",
    "multiplayer",
    "websocket",
    "railway"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.6",
    "uuid": "^13.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
